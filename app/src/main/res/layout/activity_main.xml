<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:text="Get Cat Pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/getCatBtn" android:textSize="24sp"
            android:onClick="getCatClick"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="212dp" app:srcCompat="@android:color/holo_blue_bright"
            android:id="@+id/catImage"/>

</LinearLayout>